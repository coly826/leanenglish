<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>E-Learning English - Espace Administrateur</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #fff4e6, #ffe8cc);
      font-family: 'Poppins', sans-serif;
    }

    .navbar {
      background: linear-gradient(90deg, #ff7b00, #ffae42);
      box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.4rem;
      letter-spacing: 0.5px;
    }

    .nav-link {
      color: #fff !important;
      transition: 0.3s;
    }

    .nav-link:hover {
      color: #ffe8cc !important;
    }

    h3 {
      color: #ff7b00;
      font-weight: 700;
    }

    form {
      border-radius: 15px;
      background: white;
      box-shadow: 0 4px 15px rgba(255, 123, 0, 0.15);
      transition: all 0.3s ease;
    }

    .form-control, .form-select {
      border-radius: 10px;
    }

    .btn-success {
      background-color: #ff7b00;
      border: none;
      transition: 0.3s;
    }

    .btn-success:hover {
      background-color: #ff9933;
      transform: scale(1.05);
    }

    .card {
      border: none;
      border-radius: 15px;
      background: white;
      transition: 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(255, 123, 0, 0.25);
    }

    footer {
      margin-top: 60px;
      text-align: center;
      color: #888;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/admin">
        <i class="bi bi-mortarboard-fill me-2"></i> E-Learning English PRO
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a href="/admin" class="nav-link active"><i class="bi bi-house"></i> Tableau de bord</a></li>
          <li class="nav-item"><a href="/" class="nav-link"><i class="bi bi-person"></i> Côté utilisateur</a></li>
          <li class="nav-item">
            <a href="/logout" class="nav-link text-warning">
              <i class="bi bi-box-arrow-right"></i> Déconnexion
            </a>
          </li>
                  </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <h3 class="mb-4"><i class="bi bi-gear-fill me-2"></i>Espace Administrateur</h3>

    <form action="/upload" method="POST" enctype="multipart/form-data" class="row g-3 p-4 mb-5">
      <div class="col-md-3">
        <select name="contentType" class="form-select" required>
          <option value="">-- Type de contenu --</option>
          <option value="PDF">Cours PDF</option>
          <option value="Video">Cours Vidéo</option>
          <option value="Exercise">Exercice</option>
        </select>
      </div>
      <div class="col-md-5">
        <input type="text" name="contentTitle" class="form-control" placeholder="Titre du contenu" required>
      </div>
      <div class="col-md-4">
        <input type="file" name="contentFile" class="form-control" required>
      </div>
      <div class="col-12 text-end mt-3">
        <button class="btn btn-success" type="submit"><i class="bi bi-upload"></i> Ajouter</button>
      </div>
    </form>

    <h4 class="mb-3 text-orange"><i class="bi bi-collection me-2"></i>Contenus enregistrés</h4>

    <div class="row mt-3">
      <% if (contents.length === 0) { %>
        <p class="text-center text-muted">Aucun contenu ajouté.</p>
      <% } %>

      <% contents.forEach(content => { %>
        <div class="col-md-6 mb-4">
          <div class="card p-4 shadow-sm">
            <h5 class="text-orange fw-bold"><%= content.title %></h5>
            <p><%= content.fileName %> - <%= content.type %></p>
            <div class="d-flex justify-content-between">
              <a href="<%= content.filePath %>" target="_blank" class="btn btn-warning btn-sm text-white">
                <i class="bi bi-eye"></i> Voir
              </a>

              <form action="/toggle/<%= content.id %>" method="POST">
                <button class="btn <%= content.shared ? 'btn-success' : 'btn-secondary' %> btn-sm">
                  <i class="bi bi-share"></i> <%= content.shared ? 'Partagé' : 'Privé' %>
                </button>
              </form>

              <form action="/delete/<%= content.id %>" method="POST">
                <button class="btn btn-danger btn-sm">
                  <i class="bi bi-trash"></i> Supprimer
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> E-Learning English PRO - Administration</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
