<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exercices d'Anglais - E-Learning English</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    /* ====== STYLE GLOBAL ====== */
    body {
      background: linear-gradient(135deg, #fff8f0, #ffe8cc);
      font-family: 'Poppins', sans-serif;
      color: #333;
      overflow-x: hidden;
    }

    /* ====== NAVBAR ====== */
    .navbar {
      background: linear-gradient(90deg, #ff7b00, #ffae42);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      animation: fadeDown 0.8s ease;
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.4rem;
    }

    .btn-admin {
      background: rgba(255, 255, 255, 0.9);
      color: #ff7b00;
      font-weight: 600;
      border-radius: 50px;
      transition: 0.3s ease;
    }

    .btn-admin:hover {
      background: white;
      transform: scale(1.05);
    }

    /* ====== TITRE ====== */
    h3 {
      color: #ff7b00;
      font-weight: 700;
      animation: fadeIn 1s ease;
    }

    /* ====== CARDS ====== */
    .card {
      border: none;
      border-radius: 15px;
      background: #fff;
      box-shadow: 0 6px 20px rgba(255, 123, 0, 0.15);
      transition: all 0.4s ease;
      animation: popUp 0.8s ease;
      position: relative;
      overflow: hidden;
    }

    .card:hover {
      transform: translateY(-10px) scale(1.03);
      box-shadow: 0 10px 30px rgba(255, 123, 0, 0.25);
    }

    .card::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #ff7b00, #ffae42);
      transition: 0.4s;
    }

    .card:hover::before {
      left: 0;
    }

    .badge {
      background: #ff7b00 !important;
      color: #fff !important;
      font-size: 0.9rem;
    }

    .btn-primary {
      background: #ff7b00;
      border: none;
      border-radius: 30px;
      font-weight: 600;
      transition: 0.3s ease;
    }

    .btn-primary:hover {
      background: #ff9933;
      transform: scale(1.05);
    }

    .result {
      font-weight: 600;
      transition: 0.3s ease;
    }

    /* ====== FOOTER ====== */
    footer {
      margin-top: 60px;
      text-align: center;
      color: #777;
      font-size: 0.9rem;
      padding: 20px 0;
      animation: fadeUp 1s ease;
    }

    /* ====== ANIMATIONS ====== */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes popUp {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }

    /* ====== RESPONSIVE ====== */
    @media (max-width: 768px) {
      h3 { font-size: 1.4rem; }
      .btn-primary { font-size: 0.9rem; padding: 6px 14px; }
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark mb-5">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-book-half me-2"></i> E-Learning English
      </a>
      <div class="ms-auto">
        <a href="/" class="btn btn-admin btn-sm">
          <i class="bi bi-person-circle me-1"></i> Espace Utilisateur
        </a>
      </div>
    </div>
  </nav>

  <!-- CONTENU PRINCIPAL -->
  <div class="container mt-5">
    <h3 class="text-center mb-5">
      <i class="bi bi-pencil-square me-2"></i> Exercices d'Anglais
    </h3>

    <% if (exercises.length === 0) { %>
      <p class="text-center text-muted">Aucun exercice disponible pour le moment.</p>
    <% } %>

    <div class="row">
      <% exercises.forEach(ex => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card p-4">
            <h6><span class="badge"><%= ex.level %></span></h6>
            <p class="fw-semibold"><%= ex.question %></p>
            <form class="exercise-form" data-id="<%= ex.id %>">
              <% ex.options.forEach(option => { %>
                <div class="form-check mb-1">
                  <input class="form-check-input" type="radio" name="answer" value="<%= option %>">
                  <label class="form-check-label"><%= option %></label>
                </div>
              <% }) %>
              <button type="submit" class="btn btn-primary btn-sm mt-2">
                <i class="bi bi-check2-circle"></i> Vérifier
              </button>
              <div class="result mt-2"></div>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- FOOTER -->
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> E-Learning English - Tous droits réservés</p>
  </footer>

  <!-- SCRIPT JS -->
  <script>
    document.querySelectorAll(".exercise-form").forEach(form => {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const id = form.dataset.id;
        const answer = form.querySelector("input[name='answer']:checked");
        if (!answer) return alert("Choisissez une réponse !");
        const userAnswer = answer.value;

        const res = await fetch("/check-answer", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ id, userAnswer })
        });
        const data = await res.json();
        const resultDiv = form.querySelector(".result");

        if (data.correct) {
          resultDiv.innerHTML = `<span class='text-success'>✅ Bonne réponse !</span>`;
        } else {
          resultDiv.innerHTML = `<span class='text-danger'>❌ Mauvaise réponse. <br>✅ Réponse : <b>${data.correctAnswer}</b></span>`;
        }

        resultDiv.classList.add("animate__animated", "animate__fadeInUp");
      });
    });
  </script>

</body>
</html>
